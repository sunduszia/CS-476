<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            <div class="card my-5">

                <form class="card-body cardbody-color p-lg-5" asp-action="Login">

                    <!--<div class="text-center">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                             width="200px" alt="profile">-->
                        @* <h2 class="mb-5">Login</h2>*@
                    <!--</div>-->

                    <div class="mb-3">
                        <input type="email" asp-for="Email" class="form-control" id="email" aria-describedby="emailHelp"
                               placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="password" asp-for="Password" class="form-control" id="password" placeholder="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    @if (ViewData["LoginError"] != null)
                    {
                        <br />
                        @ViewData["LoginError"]
                        <br />
                    }
                    <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button></div>
                    <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                        Not
                        Registered? <a asp-controller="User" asp-action="Register" class="text-dark fw-bold">
                            Create an
                            Account
                        </a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<style>
    .btn-color {
        background-color: rgba(0,79,46);
        color: #fff;
    }

    .profile-image-pic {
        height: 200px;
        width: 200px;
        object-fit: cover;
    }



    .cardbody-color {
        /*background-color: rgba(0,79,46);*/
        background-color: #f8f9fa;
    }

    a {
        text-decoration: none;
    }
</style>
