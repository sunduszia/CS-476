@model MyMentalHealth.Models.UsersMentalHealthIssueListModel
@using MyMentalHealth.Comparer
<table>
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Users != null)
         {
            @foreach(var user in Model.Users)
             {
                 <tr>
                    <td style="text-align:center">
                        @if (Model.SelectedUsers != null && Model.SelectedUsers.Contains(user, new CompareUsers()))
                        {
                            <input type="checkbox" id="SelectedUsers"
                                   class="form-check-input"
                                   name="SelectedUsers" checked
                                   value="@user.Id" />
                        }
                        else
                        {
                            <input type="checkbox" id="SelectedUsers"
                                   class="form-check-input"
                                   name="SelectedUsers"
                                   value="@user.Id" />
                        }
                    </td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                 </tr>
             }
         }
    </tbody>
</table>